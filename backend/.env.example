# Database
MONGO_URI=mongodb+srv://<user>:<pass>@cluster0.example.mongodb.net/eventdb?retryWrites=true&w=majority

# JWT Secrets (Generate strong random strings - min 32 characters)
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long
JWT_REFRESH_SECRET=your_refresh_token_secret_different_from_jwt_secret

# Frontend URL (set to your Vercel domain in production)
FRONTEND_URL=http://localhost:3002

# Server
PORT=5000
NODE_ENV=development

# Rate Limiting (Optional - defaults work fine)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
